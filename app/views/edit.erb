<p>  <input type="text" id="title" name="article[title]" value="<%= @article.title %>"> </p>

<label for="edit_content">Edit Content: </label>
<p><input type="text" id="content" name="article[content]" value="<%= @article.content %>"> </p>
<br>
<input type="submit" id="submit">
</form>
