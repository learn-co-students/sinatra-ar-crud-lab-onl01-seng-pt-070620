    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <input id="title" type="text" value="<%=@article.title%>" name="article[title]">
    <input id="content" type="text" value="<%=@article.content%>" name="article[content]">
    <input type="submit">
</form>